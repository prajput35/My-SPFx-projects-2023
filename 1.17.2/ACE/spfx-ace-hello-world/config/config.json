{
  "$schema": "https://developer.microsoft.com/json-schemas/spfx-build/config.2.0.schema.json",
  "version": "2.0",
  "bundles": {
    "ace-hello-world-adaptive-card-extension": {
      "components": [
        {
          "entrypoint": "./lib/adaptiveCardExtensions/aceHelloWorld/AceHelloWorldAdaptiveCardExtension.js",
          "manifest": "./src/adaptiveCardExtensions/aceHelloWorld/AceHelloWorldAdaptiveCardExtension.manifest.json"
        }
      ]
    },
    "basic-card-adaptive-card-extension": {
      "components": [
        {
          "entrypoint": "./lib/adaptiveCardExtensions/basicCard/BasicCardAdaptiveCardExtension.js",
          "manifest": "./src/adaptiveCardExtensions/basicCard/BasicCardAdaptiveCardExtension.manifest.json"
        }
      ]
    },
    "image-card-adaptive-card-extension": {
      "components": [
        {
          "entrypoint": "./lib/adaptiveCardExtensions/imageCard/ImageCardAdaptiveCardExtension.js",
          "manifest": "./src/adaptiveCardExtensions/imageCard/ImageCardAdaptiveCardExtension.manifest.json"
        }
      ]
    }
  },
  "externals": {},
  "localizedResources": {
    "AceHelloWorldAdaptiveCardExtensionStrings": "lib/adaptiveCardExtensions/aceHelloWorld/loc/{locale}.js",
    "BasicCardAdaptiveCardExtensionStrings": "lib/adaptiveCardExtensions/basicCard/loc/{locale}.js",
    "ImageCardAdaptiveCardExtensionStrings": "lib/adaptiveCardExtensions/imageCard/loc/{locale}.js"
  }
}
